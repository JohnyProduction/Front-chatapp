<Page
    x:Class="App1.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel x:Name="loginPanel" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Username: "/>
            <TextBox x:Name="usernameTextBox" Width="200" Margin="5"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Password: "/>
            <PasswordBox x:Name="passwordBox" Width="200" Margin="5"/>
        </StackPanel>
        <Button x:Name="loginButton" Content="Login" Click="loginButton_Click" Margin="5"/>
        <Button x:Name="registerButton" Content="Register" Click="registerButton_Click" Margin="5"/>
        <TextBlock x:Name="errorTextBlock"  Text=" " VerticalAlignment="Bottom" Margin="5"/>
    </StackPanel>
</Page>
